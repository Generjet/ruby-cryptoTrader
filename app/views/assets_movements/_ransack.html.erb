
<%= search_form_for @q do |f| %>
    <%= f.search_field :serial_number_cont, :placeholder => "Serial number" %>
    <%= f.search_field :from_who_eq, :placeholder => "FROM (SAP)" %>
    <%= f.number_field :to_who_eq, :placeholder => "TO (SAP)" %>
    <br>
    <%= f.label :created_at_gteq, ("After the date of:") %>
    <%= f.date_field :created_at_gteq %>
    <%= f.label :created_at_lteq, ("Before the date of:") %>
    <%= f.date_field :created_at_lteq %>

    <%= f.submit("Search", :class => "btn btn-primary") %>
<% end %>
